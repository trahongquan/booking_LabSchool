@using Project.Models;
@{
    var user = Session["user"] as account;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>ADMIN</title>
    <script src="https://use.fontawesome.com/releases/v6.1.0/js/all.js"
            crossorigin="anonymous"></script>
    <link rel="icon"
          type="image/x-icon"
          href="https://upload.wikimedia.org/wikipedia/commons/1/19/Logo-ute_%282%29.png" />
    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@latest/dist/style.css"
          rel="stylesheet" />
    @RenderSection("cssadmin", false)
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <!-- Navbar Brand-->
        <a class="navbar-brand ps-3" href="/Admin">ADMIN</a>
        <!-- Sidebar Toggle-->
        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0"
                id="sidebarToggle"
                href="#!">
            <i class="fas fa-bars"></i>
        </button>
        <!-- Navbar Search-->
        <form class="d-none d-md-inline-block form-inline ms-auto me-0 me-md-3 my-2 my-md-0"></form>
        <!-- Navbar-->
        <ul class="navbar-nav ms-auto ms-md-0 me-auto float-right me-lg-4">
            <li class="nav-item dropdown" style="display: flex">
                @if (user != null && user.role_id == 2)
                {
                    <p class="nav-link">@user.fullname</p>
                }
                else
                {
                    <p class="nav-link">ADMIN</p>
                }
                <a class="nav-link dropdown-toggle"
                   id="navbarDropdown"
                   href="#"
                   role="button"
                   data-bs-toggle="dropdown"
                   aria-expanded="false">
                    <i class="fas fa-user fa-fw"></i>
                </a>
                <ul class="dropdown-menu dropdown-menu-end"
                    aria-labelledby="navbarDropdown">
                    <li><a class="dropdown-item" href="/Logout">Logout</a></li>
                </ul>
            </li>
        </ul>
    </nav>
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <div class="sb-sidenav-menu-heading">-------------------------------------</div>
                        <a class="nav-link" href="/Admin/Home">
                            <div class="sb-nav-link-icon">
                                <i class="fas fa-tachometer-alt"></i>
                            </div>
                            Trang chủ
                        </a>
                        @if (user != null && user.role_id == 1)
                        {
                            <a class="nav-link" href="/Admin/Account">
                                <div class="sb-nav-link-icon">
                                    <i class="fas fa-sharp fa-solid fa-user"></i>
                                </div>
                                Tài khoản
                            </a>
                        }
                        <a class="nav-link" href="/Admin/Room">
                            <div class="sb-nav-link-icon">
                                <i class="fas fa-sharp fa-solid fa-table-list"></i>
                            </div>
                            Phòng thí nghiệm
                        </a>

                        <a class="nav-link" href="/Admin/Equipment">
                            <div class="sb-nav-link-icon">
                                <i class="fa fa-sharp fa-solid fa-bars"></i>
                            </div>
                            Trang thiết bị
                        </a>

                        <a class="nav-link" href="/Admin/Booking">
                            <div class="sb-nav-link-icon">
                                <i class="fa fa-sharp fa-solid fa-chart-simple"></i>
                            </div>
                            Phê duyệt đặt lịch
                        </a>

                        <a class="nav-link" href="/Admin/Booking/List">
                            <div class="sb-nav-link-icon">
                                <i class="fa fa-sharp fa-solid fa-chart-simple"></i>
                            </div>
                            Lịch khai thác phòng thí nghiệm
                        </a>
                        <a class="nav-link" href="/Admin/Booking/Statistics">
                            <div class="sb-nav-link-icon">
                                <i class="fa fa-sharp fa-solid fa-chart-simple"></i>
                            </div>
                            Thống kê thời gian khai thác
                        </a>

                    </div>
                </div>
                <div class="sb-sidenav-footer">
                    <div class="small">Logged in as:</div>
                    ADMIN
                </div>
            </nav>
        </div>
        <div id="layoutSidenav_content">
            @RenderBody()
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; Admin - @DateTime.Now.Year</div>
                        <div>
                            <a href="#">Privacy Policy</a>
                            &middot;
                            <a href="#">Terms &amp; Conditions</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            crossorigin="anonymous"></script>
    <script src="~/Scripts/admin.main.js"></script>
</body>
</html>